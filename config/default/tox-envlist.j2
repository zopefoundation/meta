[tox]
minversion = 3.18
envlist =
    lint
    py37
    py38
    py39
    py310
    py311
{% if with_future_python %}
    py312
{% endif %}
{% if with_pypy %}
    pypy3
{% endif %}
{% if with_docs %}
    docs
{% endif %}
{% if with_coverage %}
    coverage
{% endif %}
{% for line in additional_envlist %}
    %(line)s
{% endfor %}
