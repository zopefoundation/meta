name: tests

on:
  push:
  pull_request:
  schedule:
    - cron: '0 12 * * 0'  # run once a week on Sunday
  # Allow to run this workflow manually from the Actions tab
  workflow_dispatch:

jobs:
  build:
{% if services %}
    services:
{% for line in services %}
      %(line)s
{% endfor %}
{% endif %}
    strategy:
      # We want to see all failures:
      fail-fast: false
      matrix:
        os:
        - ubuntu
{% if with_windows %}
        - windows
{% endif %}
        config:
        # [Python version, tox env]
        - ["3.9",   "lint"]
{% if with_legacy_python %}
        - ["2.7",   "py27"]
        - ["3.5",   "py35"]
{% endif %}
        - ["3.6",   "py36"]
        - ["3.7",   "py37"]
        - ["3.8",   "py38"]
        - ["3.9",   "py39"]
        - ["3.10",  "py310"]
{% if with_future_python %}
        - ["%(future_python_version)s",  "py311"]
{% endif %}
{% if with_pypy and with_legacy_python %}
        - ["pypy2", "pypy"]
{% endif %}
{% if with_pypy %}
        - ["pypy3", "pypy3"]
{% endif %}
{% if with_docs %}
        - ["3.9",   "docs"]
{% endif %}
        - ["3.9",   "coverage"]
{% for line in gha_additional_config %}
        %(line)s
{% endfor %}
{% if with_windows or gha_additional_exclude %}
        exclude:
{% endif %}
{% if with_windows %}
          - { os: windows, config: ["3.9",   "lint"] }
  {% if with_docs %}
          - { os: windows, config: ["3.9",   "docs"] }
  {% endif %}
          - { os: windows, config: ["3.9",   "coverage"] }
{% endif %}
{% for line in gha_additional_exclude %}
          %(line)s
{% endfor %}

    runs-on: ${{ matrix.os }}-latest
{% if with_windows %}
    name: ${{ matrix.os }}-${{ matrix.config[1] }}
{% else %}
    name: ${{ matrix.config[1] }}
{% endif %}
    steps:
{% for line in steps_before_checkout %}
    %(line)s
{% endfor %}
    - uses: actions/checkout@v2
    - name: Set up Python
      uses: actions/setup-python@v2
      with:
        python-version: ${{ matrix.config[0] }}
    - name: Pip cache
      uses: actions/cache@v2
      with:
        path: ~/.cache/pip
        key: ${{ runner.os }}-pip-${{ matrix.config[0] }}-${{ hashFiles('setup.*', 'tox.ini') }}
        restore-keys: |
          ${{ runner.os }}-pip-${{ matrix.config[0] }}-
          ${{ runner.os }}-pip-
    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install tox
{% for line in gha_additional_install %}
        %(line)s
{% endfor %}
    - name: Test
{% if gha_test_commands %}
      run: |
      {% for line in gha_test_commands %}
        %(line)s
      {% endfor %}
{% else %}
      run: tox -e ${{ matrix.config[1] }}
{% endif %}
    - name: Coverage
      if: matrix.config[1] == 'coverage'
      run: |
        pip install coveralls coverage-python-version
        coveralls --service=github
      env:
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
