{% set with_coverage = True %}
{% include 'tox-envlist.j2' %}
{% include 'tox-testenv.j2' %}
{% include 'tox-lint.j2' %}
{% include 'tox-docs.j2' %}

[testenv:coverage]
basepython = %(coverage_basepython)s
allowlist_externals =
    mkdir
deps =
    coverage
{% if with_legacy_python %}
    coverage-python-version
{% endif %}
{% for line in testenv_deps %}
    %(line)s
{% endfor %}
{% if coverage_setenv %}
setenv =
{% for line in coverage_setenv %}
    %(line)s
{% endfor %}
{% endif %}
commands =
    mkdir -p {toxinidir}/parts/htmlcov
{% if coverage_command %}
  {% for line in coverage_command %}
    %(line)s
  {% endfor %}
{% else %}
    coverage run -m zope.testrunner --test-path=src {posargs:-vc}
{% endif %}
{% if with_sphinx_doctests %}
    coverage run -a -m sphinx -b doctest -d {envdir}/.cache/doctrees docs {envdir}/.cache/doctest
{% endif %}
    coverage html
    coverage report -m --fail-under=%(fail_under)s
{% for line in coverage_additional %}
%(line)s
{% endfor %}
{% include 'tox-coverage-config.j2' %}
